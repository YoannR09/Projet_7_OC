<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name = "struts.multipart.maxSize" value = "1000000" />
    <package name="public" extends="struts-default">
        <default-action-ref name="index" />
        <!-- Action "index" -->
        <action name="index">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="consulterPret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doConsulterPret">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="recherchePret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doListPretRecherche">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="prolongationPret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doProlongattionPret">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="deletePret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doDeletePret">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="ajouterPret">
            <result>WEB-INF/jsp/ajouter/ajouterPret.jsp</result>
        </action>

        <action name="selectionnerAbonne"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doSelectionAbonne">
            <result name="success">WEB-INF/jsp/ajouter/selectionnerAbonne.jsp</result>
        </action>

        <action name="rechercheLivre"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doListLivre">
            <result name="success">WEB-INF/jsp/ajouter/ajouterPret.jsp</result>
        </action>

        <action name="rechercheAbonne"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doAbonne">
            <result name="success">WEB-INF/jsp/ajouter/selectionnerAbonne.jsp</result>
        </action>

        <action name="addPretLivreUnique"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doAjouterPret">
            <result name="success">WEB-INF/jsp/index.jsp</result>
        </action>

    </package>
</struts>