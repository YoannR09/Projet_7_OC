<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name = "struts.multipart.maxSize" value = "1000000" />
    <package name="public" extends="struts-default">
        <default-action-ref name="index" />
        <!-- Action "index" -->
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="consulterPret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doConsulterPret">
            <result name="success">/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="recherchePret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doListPretRecherche">
            <result name="success">/jsp/consulter/consulterPret.jsp</result>
        </action>

    </package>
</struts>