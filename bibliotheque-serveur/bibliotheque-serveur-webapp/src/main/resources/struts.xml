<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name = "struts.multipart.maxSize" value = "1000000" />

    <package name="base" abstract="true" extends="struts-default">

        <interceptors>
            <interceptor name="auth" class="fr.oc.projet.webapp.interceptor.AuthInterceptor" />
            <interceptor-stack name="authenticatedStack">
                <interceptor-ref name="auth" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <global-results>
            <result name="error-forbidden" type="httpheader">
                <param name="error">403</param>
            </result>
            <result name="Exception" type="httpheader">
                <param name="error">500</param>
                <param name="parse">true</param>
                <param name="errorMessage">%{exception}</param>
            </result>
            <result name="TechnicalException" type="httpheader">
                <param name="error">500</param>
                <param name="parse">true</param>
                <param name="errorMessage">Erreur technique - %{exception.message}</param>
            </result>
            <result name="NotFoundException" type="httpheader">
                <param name="error">404</param>
                <param name="parse">true</param>
                <param name="errorMessage">Objet introuvable - %{exception.message}</param>
            </result>
        </global-results>
    </package>

    <package name="public" extends="base">
        <default-action-ref name="index" />
        <!-- Action "index" -->
        <action name="index">
            <result>WEB-INF/jsp/index.jsp</result>
        </action>
        <action name="login">
            <interceptor-ref name="store">
                <param name="operationMode">STORE</param>
            </interceptor-ref>
            <interceptor-ref name="defaultStack" />
            <result>WEB-INF/jsp/login/login.jsp</result>
        </action>

        <action name="doLogin" class="fr.oc.projet.webapp.action.LoginAction" method="doLogin">
            <result name="success">WEB-INF/jsp/index.jsp</result>
            <result name="error">WEB-INF/jsp/login/login.jsp</result>
        </action>
    </package>


    <package name="private" extends="base">
        <default-interceptor-ref name="authenticatedStack" />

        <action name="logout" class="fr.oc.projet.webapp.action.LoginAction" method="doLogout">
            <result name="success">WEB-INF/jsp/index.jsp</result>
        </action>


        <action name="consulterPret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doConsulterPret">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="recherchePret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doListPretRecherche">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="prolongationPret"
                class="fr.oc.projet.webapp.action.ConsulterPretAction"
                method="doProlongationPret">
            <result name="success">WEB-INF/jsp/consulter/consulterPret.jsp</result>
        </action>

        <action name="rechercheRestituerLivre"
                class="fr.oc.projet.webapp.action.RestituerAction"
                method="doRechercheRestituerPret">
            <result name="success">WEB-INF/jsp/restituer/restituerPret.jsp</result>
        </action>

        <action name="ajouterPret">
            <result>WEB-INF/jsp/ajouter/ajouterPret.jsp</result>
        </action>


        <action name="restituerPret">
            <result>WEB-INF/jsp/restituer/restituerPret.jsp</result>
        </action>

        <action name="selectionnerAbonne"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doSelectionAbonne">
            <result name="success">WEB-INF/jsp/ajouter/selectionnerAbonne.jsp</result>
        </action>

        <action name="rechercheLivre"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doListLivre">
            <result name="success">WEB-INF/jsp/ajouter/ajouterPret.jsp</result>
        </action>

        <action name="rechercheAbonne"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doAbonne">
            <result name="success">WEB-INF/jsp/ajouter/selectionnerAbonne.jsp</result>
        </action>

        <action name="addPretLivreUnique"
                class="fr.oc.projet.webapp.action.AjouterPretAction"
                method="doAjouterPret">
            <result name="success">WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="doRestitutionLivre"
                class="fr.oc.projet.webapp.action.RestituerAction"
                method="doRestitutionPret">
            <result name="success">WEB-INF/jsp/index.jsp</result>
        </action>
    </package>
</struts>